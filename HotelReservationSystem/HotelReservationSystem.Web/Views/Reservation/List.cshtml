@using HotelReservationSystem.Core.Domain.Entities
@using HotelReservationSystem.Core.Domain.Enums
@model HotelReservationSystem.Web.ViewModels.Reservation.ReservationListPageViewModel

@{
    ViewData["Title"] = "Lista rezerwacji";
}

<h2 class="mt-4 text-center">Lista rezerwacji</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table table-striped table-bordered mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>Pokój</th>
                        <th>Data przyjazdu</th>
                        <th>Data wyjazdu</th>
                        <th>Gość</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Reservations == null || !Model.Reservations.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Brak rezerwacji</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var r in Model.Reservations)
                        {
                            <tr>
                                <td>@(r.RoomNumber ?? "Brak")</td>
                                <td>@r.ArrivalDate.ToShortDateString()</td>
                                <td>@r.DepartureDate.ToShortDateString()</td>
                                <td>@r.GuestFullName</td>
                                <td>@r.Status</td>
                                <td>
                                    <conditional-group show-for-role="Recepcionist, Manager"> 
                                        <form asp-action="Confirm" asp-route-id="@r.Id" method="post" style="display:inline;">
                                            <button class="btn btn-success btn-sm">Potwierdź</button>
                                        </form>
                                    
                                        <form asp-action="Cancel" asp-route-id="@r.Id" method="post" style="display:inline;">
                                            <input type="hidden" name="reason" value="recepcionist" />
                                            <button class="btn btn-danger btn-sm">Anuluj</button>
                                        </form>
                                    </conditional-group>
                                    @if (Enum.TryParse<ReservationStatus>(r.Status, out var parsedStatus) 
                                            && parsedStatus == ReservationStatus.Pending 
                                            && !(User.IsInRole("Recepcionist") || User.IsInRole("Manager")))
                                    {
                                        <a href="@Url.Action("Pay", "Payment", new { reservationId = r.Id })" class="btn btn-warning btn-sm mt-1">
                                            Dokończ płatność
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<conditional-group show-for-role="Recepcionist, Manager"> 
    <h3 class="mt-5 text-center pb-3">Dostępność pokoi</h3>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <table class="table table-bordered table-sm">
                    <thead class="table-light">
                        <tr>
                            <th>Numer pokoju</th>
                            <th>Typ</th>
                            <th>Cena</th>
                            <th>Dostępny</th>
                            <th>Akcja</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model.Rooms)
                        {
                            <tr>
                                <td>@room.Number</td>
                                <td>@room.Type</td>
                                <td>@room.PricePerNight zł</td>
                                <td>
                                    @if (room.IsAvailable)
                                    {
                                        <span class="badge bg-success">Dostępny</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Niedostępny</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="ToggleRoomAvailability" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@room.Id" />
                                        <button class="btn btn-outline-secondary btn-sm">
                                            Zmień
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</conditional-group>