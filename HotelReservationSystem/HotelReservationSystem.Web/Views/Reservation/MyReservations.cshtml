@using HotelReservationSystem.Core.Domain.Enums
@model IEnumerable<HotelReservationSystem.Web.ViewModels.ReservationListViewModel>

@{
    ViewData["Title"] = "Moje rezerwacji";
}

<h2 class="mt-4">Lista rezerwacji</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Pokój</th>
            <th>Data przyjazdu</th>
            <th>Data wyjazdu</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Brak rezerwacji</td>
            </tr>
        }
        else
        {
            @foreach (var r in Model)
            {
                <tr>
                    <td>@(r.RoomNumber ?? "Brak")</td>
                    <td>@r.ArrivalDate.ToShortDateString()</td>
                    <td>@r.DepartureDate.ToShortDateString()</td>
                    <td>@r.Status</td>
                    <td>
                        @if (Enum.TryParse<ReservationStatus>(r.Status, out var statusParsed) && statusParsed != ReservationStatus.Cancelled)
                        {
                            <form asp-action="Cancel" asp-route-id="@r.Id" method="post" style="display:inline;">
                                <input type="hidden" name="reason" value="recepcjonista" />
                                <button class="btn btn-danger btn-sm">Anuluj</button>
                            </form>
                        }
                        @if (Enum.TryParse<ReservationStatus>(r.Status, out var statusParsed2) && statusParsed2 == ReservationStatus.Pending)
                        {
                            <a href="@Url.Action("Pay", "Payment", new { reservationId = r.Id })" class="btn btn-warning btn-sm mt-1">
                                Dokończ płatność
                            </a>
                        }
                        @if (Enum.TryParse<ReservationStatus>(r.Status, out var statusParsed3) && statusParsed3 == ReservationStatus.Confirmed)
                        {
                            <span class="badge bg-success">Opłacone</span>
                        }
                    </td>

                </tr>
            }
        }
    </tbody>
</table>
        </div>
    </div>
</div>