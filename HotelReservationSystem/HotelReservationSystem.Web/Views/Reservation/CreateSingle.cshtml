@using HotelReservationSystem.Web.ViewModels
@model ReservationViewModel

@{
        ViewData["Title"] = "Nowa rezerwacja - Pokój jednoosobowy";
}

<div class="container py-4">
    <h2 class="mb-4 text-center border-bottom pb-3">Nowa rezerwacja - Pokój jednoosobowy</h2>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="row g-0">
                    <div class="col-lg-5 bg-light border-end">
                        <img src="@Url.Content("~/images/rooms/single-room.jpg")" class="img-fluid" alt="Pokój jednoosobowy" style="height: 100%; object-fit: cover; min-height: 300px;" />
                        <div class="p-4">
                            <h4>Wyposażenie</h4>
                            <ul class="text-muted">
                                <li>Jedno wygodne łóżko</li>
                                <li>Biurko do pracy</li>
                                <li>Bezpłatne Wi-Fi</li>
                            </ul>
                            <p class="h4 text-primary">Cena za noc: <strong>550 zł</strong></p>
                        </div>
                    </div>
                    <div class="col-lg-7 p-4">
                        @await Html.PartialAsync("_CreateSingleForm", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}