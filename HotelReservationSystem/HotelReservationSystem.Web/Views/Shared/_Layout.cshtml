<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aurora</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelReservationSystem.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <header>
        <nav class="nav-container">
            <div class="nav-logo">
                <i><a asp-controller="Home" asp-action="Index" title="Logo">Aurora</a></i>
            </div>
            <ul class="nav-list">
                <li>
                    <a asp-controller="Home" asp-action="Index" title="Cennik usług hotelu">Pokoje</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a asp-controller="Reservation" asp-action="MyReservations" title="Sprawdź swoje rezerwacje">Moje rezerwacje</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Index" title="Zgłoś incydent lub naruszenie">Zgłoś incydent</a>
                    </li>
                }
                <li>
                    <a asp-controller="Home" asp-action="Privacy" title="Informacje o naszym hotelu">O nas</a>
                </li>
            </ul>

            <div class="nav-user" title="Zaloguj się lub zarejestruj">
                @if (!User.Identity.IsAuthenticated)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="0 0 24 24" width="100%" height="100%" fill="currentColor">
                        <path d="M16.043,14H7.957A4.963,4.963,0,0,0,3,18.957V24H21V18.957A4.963,4.963,0,0,0,16.043,14Z" />
                        <circle cx="12" cy="6" r="6" />
                    </svg>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" fill="currentColor">
                        <path d="M224 160C241.7 160 256 145.7 256 128C256 110.3 241.7 96 224 96L160 96C107 96 64 139 64 192L64 448C64 501 107 544 160 544L224 544C241.7 544 256 529.7 256 512C256 494.3 241.7 480 224 480L160 480C142.3 480 128 465.7 128 448L128 192C128 174.3 142.3 160 160 160L224 160zM566.6 342.6C579.1 330.1 579.1 309.8 566.6 297.3L438.6 169.3C426.1 156.8 405.8 156.8 393.3 169.3C380.8 181.8 380.8 202.1 393.3 214.6L466.7 288L256 288C238.3 288 224 302.3 224 320C224 337.7 238.3 352 256 352L466.7 352L393.3 425.4C380.8 437.9 380.8 458.2 393.3 470.7C405.8 483.2 426.1 483.2 438.6 470.7L566.6 342.7z" />
                    </svg>
                }
            </div>
        </nav>

        <div class="search-container">
            <form asp-controller="Room" asp-action="Index" method="get">
                <div class="search-options">
                    <div class="form-select-element">
                        <select name="roomType" id="roomType">
                            <option value="">Typ pokoju</option>
                            <option value="Single">Single</option>
                            <option value="Double">Double</option>
                        </select>
                    </div>
                    <div class="form-element">
                        <label class="form-label-element">[Data przyjazdu]</label>
                        <input name="arrivalDate" class="date" type="date" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="form-element">
                        <label class="form-label-element">[Data wyjazdu]</label>
                        <input name="departureDate" class="date" type="date" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")">
                    </div>
                    <div>
                        <select name="guests" id="guests">
                            <option value="1">Liczba gości</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                        </select>
                    </div>
                </div>
                <div class="search-bar">
                    <div class="search-wrapper">
                        <input name="searchPhrase" id="search-input" type="text" placeholder="Wyszukaj po frazie.." />
                        <button class="search-btn">
                            <svg width="100%" height="100%" viewBox="0 0 94 90" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
                                <path d="M82.25 78.75L65.2125 62.4375M74.4167 41.25C74.4167 57.8185 60.3883 71.25 43.0833 71.25C25.7784 71.25 11.75 57.8185 11.75 41.25C11.75 24.6815 25.7784 11.25 43.0833 11.25C60.3883 11.25 74.4167 24.6815 74.4167 41.25Z" stroke="#EAE3E3" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
