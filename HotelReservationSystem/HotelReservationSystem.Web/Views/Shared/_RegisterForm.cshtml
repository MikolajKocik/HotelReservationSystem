@using HotelReservationSystem.Web.ViewModels
@model RegisterViewModel

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="mb-3">
        <input asp-for="Email" class="form-control" placeholder="Email" />
    </div>
    <div class="mb-3">
        <input asp-for="Password" type="password" class="form-control" placeholder="Hasło" />
    </div>
    <div class="mb-3">
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Potwierdź hasło" />
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Zarejestruj</button>
    </div>
</form>
