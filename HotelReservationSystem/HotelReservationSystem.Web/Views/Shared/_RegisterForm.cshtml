@using HotelReservationSystem.Web.ViewModels
@model RegisterViewModel

<form asp-controller="Account" asp-action="Register" method="post" novalidate class="needs-validation" id="registerForm">
    <div asp-validation-summary="All" class="text-danger mb-2"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label visually-hidden"></label>
        <input asp-for="Email" class="form-control" placeholder="Email" type="email" required />
        <div class="invalid-feedback">Wprowadź poprawny adres email</div>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label visually-hidden"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Numer telefonu" type="text" required />
        <div class="invalid-feedback">Wprowadź poprawny numer telefonu</div>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label visually-hidden"></label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Hasło" required minlength="6" />
        <div class="invalid-feedback">Hasło jest wymagane</div>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label visually-hidden"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Potwierdź hasło" required minlength="6" />
        <div class="invalid-feedback">Potwierdź hasło</div>
    </div>
    <div class="d-flex justify-content-between align-items-center">
        <a href="#" data-bs-toggle="modal" data-bs-target="#loginModal" class="text-muted small">Masz już konto? Zaloguj się</a>
        <button type="submit" class="btn btn-primary">Zarejestruj</button>
    </div>
</form>
