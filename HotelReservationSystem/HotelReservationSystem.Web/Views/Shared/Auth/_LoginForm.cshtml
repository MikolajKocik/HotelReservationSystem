@using HotelReservationSystem.Web.ViewModels
@model LoginViewModel

@{
    var returnUrl = Context.Request.Query["returnUrl"].ToString();
    if (string.IsNullOrWhiteSpace(returnUrl))
    {
        returnUrl = Context.Request.Query["ReturnUrl"].ToString();
    }

    if (string.IsNullOrWhiteSpace(returnUrl))
    {
        returnUrl = ViewData["ReturnUrl"]?.ToString() ?? string.Empty;
    }
}

<form asp-controller="Account" asp-action="Login" method="post" novalidate class="needs-validation" id="loginForm">
    <input type="hidden" name="returnUrl" id="loginReturnUrl" value="@returnUrl" />
    <div asp-validation-summary="All" class="text-danger mb-2"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label visually-hidden"></label>
        <input asp-for="Email" class="form-control" placeholder="Email" aria-describedby="emailHelp" required />
        <div class="invalid-feedback">Wprowadź poprawny adres email.</div>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label visually-hidden"></label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Hasło" required minlength="6" />
        <div class="invalid-feedback">Hasło jest wymagane (min. 6 znaków).</div>
    </div>
    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
        <label class="form-check-label" asp-for="RememberMe">Zapamiętaj mnie</label>
    </div>
    <div class="d-flex justify-content-between align-items-center">
        <a href="#" data-bs-toggle="modal" data-bs-target="#registerModal" class="text-muted small">Nie masz konta? Zarejestruj się</a>
        <button type="submit" class="btn btn-primary">Zaloguj</button>
    </div>
</form>
