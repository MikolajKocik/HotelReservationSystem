@{
    ViewData["Title"] = "Galeria - Hotel Aurora";
}

<section class="container mt-5">
    <h2 class="text-center mb-4">Nasze Wnętrza</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <img src="~/images/rooms/single-room.jpg" class="img-fluid rounded shadow" alt="Pokój jednoosobowy" />
        </div>
        <div class="col-md-4 mb-4">
            <img src="~/images/rooms/double-room.jpg" class="img-fluid rounded shadow" alt="Pokój dwuosobowy" />
        </div>
        <div class="col-md-4 mb-4">
            <img src="~/images/services/restaurant.jpg" class="img-fluid rounded shadow" alt="Restauracja" />
        </div>
        <div class="col-md-4 mb-4">
            <img src="~/images/services/spa.jpg" class="img-fluid rounded shadow" alt="Strefa SPA" />
        </div>
        <div class="col-md-4 mb-4">
            <img src="~/images/services/gym.jpg" class="img-fluid rounded shadow" alt="Siłownia" />
        </div>
        <div class="col-md-4 mb-4">
            <img src="~/images/services/billard.jpg" class="img-fluid rounded shadow" alt="Bilard" />
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Powrót do strony głównej</a>
    </div>
</section>