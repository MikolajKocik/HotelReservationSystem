@{
    ViewData["Title"] = "Kontakt";
}

<div class="privacy-container py-3">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-lg-8">

            <section class="contact-info p-3 text-center">
                <p class="mb-2"><strong>Adres:</strong> ul. Hotelowa 1, 00-000 Miasto</p>
                <p class="mb-2"><strong>Telefon:</strong> +48 123 456 789</p>
                <p class="mb-0"><strong>Email:</strong> <a href="mailto:recepcja@hotel.pl">recepcja@hotel.pl</a></p>
            </section>

            <h2 class="text-center mt-4">Formularz kontaktowy</h2>

            <form method="post" action="#">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Imię i nazwisko" />
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" placeholder="Email" />
                </div>
                <div class="mb-3">
                    <textarea class="form-control" rows="4" placeholder="Wiadomość"></textarea>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary px-5">Wyślij</button>
                </div>
            </form>
        </div>
    </div>
</div>
