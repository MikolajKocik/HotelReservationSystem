@model HotelReservationSystem.Models.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Nowa rezerwacja";
}

<h2>Nowa rezerwacja</h2>

<form asp-action="Create" method="post" class="row g-3 mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="ArrivalDate" class="form-label">Data przyjazdu</label>
        <input asp-for="ArrivalDate" class="form-control" type="date" />
        <span asp-validation-for="ArrivalDate" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="DepartureDate" class="form-label">Data wyjazdu</label>
        <input asp-for="DepartureDate" class="form-control" type="date" />
        <span asp-validation-for="DepartureDate" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="GuestFirstName" class="form-label">Imię</label>
        <input asp-for="GuestFirstName" class="form-control" />
        <span asp-validation-for="GuestFirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="GuestLastName" class="form-label">Nazwisko</label>
        <input asp-for="GuestLastName" class="form-control" />
        <span asp-validation-for="GuestLastName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="GuestEmail" class="form-label">Email</label>
        <input asp-for="GuestEmail" class="form-control" type="email" />
        <span asp-validation-for="GuestEmail" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="GuestPhoneNumber" class="form-label">Telefon</label>
        <input asp-for="GuestPhoneNumber" class="form-control" />
        <span asp-validation-for="GuestPhoneNumber" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="RoomId" class="form-label">Wybierz pokój</label>
        <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-select"></select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Zarezerwuj</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
